{
  "name": "Just the facts",
  "version": "0.0",
  "page_action": {
    "default_title": "Just the facts"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "css": ["highlight.css"],
      "matches": ["*://*/*", "file://*/*"],
      "run_at": "document_end",
      "js": ["highlight.js"]
    }
  ],
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "manifest_version": 2
}
